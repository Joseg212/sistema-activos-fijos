{% block contentDashboard %}
    <div class="row">
        <!--Pantalla oculta para seleccionar tipo de opciones-->
        <div class="msg_sel" id="msg01">
                <div id="message_sel">
                    <h4 class="_orange" style="text-align:left"><span class="glyphicon glyphicon-list-alt" style="margin-right:10px;"></span>SELECCION</h4>
                    <hr class="line_style" />
                    <p style="text-align:left" class="af-text-win-select" >Se ha seleccionado el siguiente dato:</p>
                    <label id="msg1"></label>
                    <label id="msg2"></label>
                    <p style="text-align:left;" class="af-text-win-select">¿Que desea realizar?
                    </p>
                    <a  href="#" id="editWin" class="btn btn-ttc">
                        <span class="glyphicon glyphicon-edit" style="margin-right:10px;"></span>Editar
                    </a>
                    <a href="#" id="deleteWin" class="btn btn-ttc" onclick="deleteData(event)">
                        <span class="glyphicon glyphicon-remove" style="margin-right:10px;"></span>Eliminar
                    </a>
                    <a href="javascript://salir ;" id="outwin" class="btn btn-ttc">
                        <span class="glyphicon glyphicon-log-out" style="margin-right:10px;"></span>Salir
                    </a>
                </div>
        </div>
        <!-- Fin Pantalla oculta para seleccionar tipo de opciones-->

        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-12 left title_modify">
                    <h3 class="af-title-h3">INDICE DE PRECIO</h3>
                    <h4><small>El activo fijo puede ser ajustado mediante índice de precio al consumidor (IPC), que el valor nominal afectado por la inflación.</small> </h4>
                </div>
            </div>
            <hr class="line-style-top-table" />
            <table id="tblIndicePrecio"  class="table table-striped table-hover text_table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>AÑO</th>
                        <th>MES</th>
                        <th>FACTOR</th>
                        <th>RECONVER</th>
                        <th>GRUPO</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="col-lg-2">
                <h4 class="_orange">LISTADO:</h4>
                <hr class="line_style" />
                <p class="af-p-12">Seleccione algun items y haga clic para poder modificarlo, o eliminarlo.
                </p>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
        </div>
        <div class="col-lg-6 col-right">
                <a  href="{{ path('new_indicePrecio') }}" class="btn btn-dark">Agregar</a>
                <a  href="{{ path('app_default') }}" class="btn btn-dark">Retornar</a>
        </div>
        <div class="col-lg-2"> 
        </div>
    </div>
{% endblock %}

{% block javascriptsFooter %}

<script type="text/javascript">
    var tblResponsable=null;
    var idCode = "";

    $(document).ready(function(e){
        loadLstIndicePrecio();

        $(document).on("click",".tr-select",function(event){
            //console.log("Seleccionado:" + $(this).attr("id"));
            idCode = String($(this).attr("id"));
            var idNombre = "#name_" + String($(this).attr("id"));
            var Nombre = $(idNombre).val();

            var rutaEdit = "{{ path('edit_indicePrecio',{idCode:'invertCode'}) }}";

            rutaEdit = rutaEdit.replace('invertCode',idCode);

            $("#editWin").attr("href",rutaEdit);

            $("#msg1").empty();
            $("#msg2").empty();
            $("#msg1").html("<b>Id:</b>"+idCode);
            $("#msg2").html("<b>Descrip:</b>"+Nombre);

            $("#msg01").fadeIn('slow',function(e){
                $("#msg01").css("display","inherit");
            });
        });

        $("#outwin").click(function(e){
            e.preventDefault();
            $("#msg01").fadeOut('slow',function(e){
                $("#msg01").css("display","none");
            })
        });

        $("#SearchData").click(function(e){
            e.preventDefault();
            console.log("Hizo clic");
            loadLstIndicePrecio();
        })

    });
    function deleteData(event){
        event.preventDefault();

        rootDelete = "{{ path('delete_indicePrecio') }}";

        swal({
            title: '¿Esta seguro de eliminar el responsable registrado?',
            text: "No podrás deshacer está acción.",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, Eliminar!'
        }).then((result)=>{
            if (result.value){
            $.ajax({
                data:{'idCode':idCode},
                type:'post',
                dataType:'json',
                url: rootDelete,
                error: function(err,txt,thr){
                $('body').html(err.responseText);
                },
                success: function(result){
                if (result.ok=='01'){
                    loadLstIndicePrecio();
                    swal("Propiedad",result.msg,"success");
                } else {
                    swal("Propiedad",result.msg,"error");
                }
                }

            });
            }
        });

        $("#msg01").fadeOut('slow',function(e){
            $("#msg01").css("display","none");
        });
    }
    function loadLstIndicePrecio(){
        console.log("Carga la lista...");

        var rootAjaxList = "{{ path('ajax_lstIndicePrecio') }}";

        tblResponsable = $('#tblIndicePrecio').dataTable({
                destroy:true,
                serverSide: true,
                searching: true,
                lengthChange: false,
                pageLength:35,
                language:{
                    info:"Mostrando  _END_/_TOTAL_ ",
                    infoEmpty:"Mostrando  1 de 0 ", 
                    paginate:{
                        first:"Primero",
                        previous:"Previo",
                        next:"Próximo",
                        last:"Último"
                    }
                },
                dom: '<"btnSearch">Pfrtip',
                ajax:{
                    method:"POST",
                    dataType:"JSON",
                    url:rootAjaxList,
                    error: function(err,txt,thr){
                        $("body").empty();
                        $("body").html(err.responseText);
                    }
                },
                columns:[
                    {data:"id"},
                    {data:"anio"},
                    {data:"mes"},
                    {data:"factor"},
                    {data:"reconver"},
                    {data:"grupo"},
                ],
                deferRender: true
        });

        $("div.btnSearch").html('<button type="button" class="btn btn-dark" id="SearchData"><i class="fa fa-search"></i></button>');	            
    }
</script>
{% endblock %}
