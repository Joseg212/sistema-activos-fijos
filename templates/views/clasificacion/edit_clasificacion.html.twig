{% block contentDashboard %}

{{ form_start(form,{'attr':{'role':'form','novalidate':'novalidate','class':'form-inline'}}) }}
<div class="row ml-2">
    <div class="col-md-10 af-content-data ventana1">
        <div class="row x_title">
            <div class="col-lg-12">
                    <h3 class="af-title-h3">CLASIFICACIÓN</h3>
                    <h4><small>Modificar la clasificación para los activos fijo, e indique el código de cuenta contable.</small> </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                {{ form_label(form.id_clase) }}
                {{ form_widget(form.id_clase) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                {{ form_label(form.descripcion) }}
                {{ form_widget(form.descripcion) }}
                <span class="text-danger">{{ form_errors(form.descripcion) }}</span>          
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                {{ form_label(form.cod_cuenta) }}
                {{ form_widget(form.cod_cuenta) }}
                <span class="text-danger">{{ form_errors(form.cod_cuenta) }}</span>          
            </div>
            <div class="col-md-6 form-group">
                {{ form_label(form.observacion) }}
                {{ form_widget(form.observacion) }}
                <span class="text-danger">{{ form_errors(form.observacion) }}</span>          
            </div>
        </div>
        <!-- Botones -->
        <div class="row mt-4" style="clear:left">
            <div class="col-md-12">
                <div class="form-group" style="float:right;clear:right;"> 
                    {{ form_widget(form.write) }}
                    <a href="{{path('app_clasificacion')}}" class="btn btn-dark">Retornar</a>
                </div>
            </div>
        </div>
        <!-- Botones -->
    </div>
    <div class="col-md-2">
        <h4 class="_orange">INFORMACION:</h4>
        <hr class="line_style" />
        <p class="af-p-12">Ingrese los datos solicitado, para culminar y guardar la informacion hacer clic en el Guardar</p>
   </div>
</div>
{{ form_end(form) }}

{% endblock %}

{% block javascriptsFooter %}

<script type="text/javascript">

    $(document).ready(function(e){

    });

</script>
{% endblock %}
