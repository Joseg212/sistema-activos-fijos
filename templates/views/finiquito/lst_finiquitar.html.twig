{% block javascriptsFooter %}

<script type="text/javascript">
    var tblIdentificar=null;
    var idCode = "";
    var idPropiedad="";
    var idUbicacion="";

    $(document).ready(function(e){
        //loadLstIdentificar();
        $(document).on("click",".tr-select",function(event){
            //console.log("Seleccionado:" + $(this).attr("id"));
            idCode = String($(this).attr("id"));
            var idNombre = "#name_" + String($(this).attr("id"));
            var Nombre = $(idNombre).val();
            var estatus = $("#edo_"+String($(this).attr("id"))).val();

            var rutaEdit = "{{ path('process_finiquito',{idActivo:'invertCode'}) }}";

            var rutaRpt = "{{ path('rpt_finiquito',{idActivo:'invertCode'}) }}";
            
            if (estatus=='activo'){
                rutaEdit = rutaEdit.replace('invertCode',idCode);
                $("#editWin").attr("href",rutaEdit);
                $("#editWin").css("display","inline-flex");
                $("#rptWin").css("display","none");
            } else {
                rutaRpt = rutaRpt.replace('invertCode',idCode);
                $("#rptWin").attr("href",rutaRpt);
                $("#rptWin").css("display","inline-flex");
                $("#editWin").css("display","none");
            }

            $("#msg1").empty();
            $("#msg2").empty();
            $("#msg1").html("<b>Id:</b>"+idCode);
            $("#msg2").html("<b>Descrip:</b>"+Nombre);

            $("#msg01").fadeIn('slow',function(e){
                $("#msg01").css("display","inherit");
            });
        });

        $("#outwin").click(function(e){
            e.preventDefault();
            $("#msg01").fadeOut('slow',function(e){
                $("#msg01").css("display","none");
            })
        });

        $("#SearchData").click(function(e){
            e.preventDefault();
            console.log("Hizo clic");
            loadLstIdentificar();
        })

        var rootSelProp="{{ path('ajax_sel_prop') }}";

        $.ajax({
            data:{},
            method:'post',
            dataType:'json',
            url:rootSelProp,
            error:function(err,txt,thr){
                $('body').empty();
                $('body').html(err.responseText);
            },
            success:function(result){
                if (result.ok=='01'){
                    var idProp = 'select';
                    /*  Verificar la Cookies */
                    if (!!$.cookie('idPropiedad')){
                        idProp = $.cookie('idPropiedad');
                        idPropiedad = $.cookie('idPropiedad');
                        selectUbicacion(idProp);
                    }
                    var htmlCode = '';
                    $.each(result.elements,function(posc,item){
                        if (idProp==item.id){
                            htmlCode+='<option value="'+item.id+'" selected>'+item.data+'</option>\n';
                        } else {
                            htmlCode+='<option value="'+item.id+'">'+item.data+'</option>\n';
                        }
                    });
                    $("#selPropiedad").empty();
                    $("#selPropiedad").append(htmlCode);
                    //loadLstIdentificar();
                    $("#selPropiedad").change();
                } else {
                    console.log(result.msg);
                }
            }
        });

        $("#selPropiedad").change(function(e){
            idPropiedad = $(this).val();

            $.cookie('idPropiedad',idPropiedad);

            selectUbicacion(idPropiedad);

        });
        $("#selUbicacion").change(function(e){
            idUbicacion = $(this).val();

            $.cookie('idUbicacion',idUbicacion);

            loadLstIdentificar();
            
            var rootNew = "{{ path('new_activofijo',{'idUbicacion':'valorCamb'}) }}";

            rootNew = rootNew.replace("valorCamb",idUbicacion);

            if (idUbicacion=='select'){
                $("#newData").css("visibility","hidden");
            } else {
                $("#newData").attr("href",rootNew);
                $("#newData").css("visibility","inherit");
            }
        });

        $(document).on("click",".selActive",function(event){
            //event.preventDefault();
            var idCode = $(this).data('id');
            var rootAjax = "{{ path('mark_identificar') }}";

            //console.log("idcode "+idCode);
            var condi="not";
            if ($(this).is(":checked"))
            {
                condi="yes";
            } else {
                condi="not";
            }
            $.ajax({
                data:{'condi':condi,'idCode':idCode},
                type:'post',
                dataType:'json',
                url:rootAjax,
                error:function(err,txt,thr){
                    $('body').empty();
                    $('body').html(err.responseText);
                },
                success: function(result){
                    if (result.ok=='01'){
                        if (result.refresh=='yes'){
                            loadLstIdentificar();
                        }
                    } else {
                        console.log(result.msg);
                        event.preventDefault();
                    }                    
                }
            });

        });

    }); // Fin de Document Ready

    function selectUbicacion(idProp){
        var rootSelUbic="{{ path('ajax_sel_ubic') }}";

        $.ajax({
            data:{'idProp':idProp},
            method:'post',
            dataType:'json',
            url:rootSelUbic,
            error:function(err,txt,thr){
                $('body').empty();
                $('body').html(err.responseText);
            },
            success:function(result){
                if (result.ok=='01'){
                    var idUbic = 'select';
                    /*  Verificar la Cookies */
                    if (!!$.cookie('idUbicacion')){
                        idUbic = $.cookie('idUbicacion');
                        idUbicacion = $.cookie('idUbicacion');
                    }
                    var htmlCode = '';
                    $.each(result.elements,function(posc,item){
                        if (idUbic==item.id){
                            htmlCode+='<option value="'+item.id+'" selected>'+item.data+'</option>\n';
                        } else {
                            htmlCode+='<option value="'+item.id+'">'+item.data+'</option>\n';
                        }
                    });
                    $("#selUbicacion").empty();
                    $("#selUbicacion").append(htmlCode);
                    //loadLstIdentificar();
                    $("#selUbicacion").change();
                } else {
                    console.log(result.msg);
                }
            }
        });

    }


    function loadLstIdentificar(){
        var rootAjaxList = "{{ path('ajax_lstFiniquitar') }}";

        tblIdentificar = $('#tblIdentificar').dataTable({
                destroy:true,
                serverSide: true,
                searching: true,
                lengthChange: false,
                pageLength:35,
                language:{
                    info:"Mostrando  _END_/_TOTAL_ ",
                    infoEmpty:"No se tiene datos", 
                    paginate:{
                        first:"Primero",
                        previous:"Previo",
                        next:"Próximo",
                        last:"Último"
                    }
                },
                dom: '<"btnSearch">Pfrtip',
                ajax:{
                    data:{'idPropiedad':idPropiedad, 'idUbicacion':idUbicacion},
                    method:"POST",
                    dataType:"JSON",
                    url:rootAjaxList,
                    error: function(err,txt,thr){
                        $("body").empty();
                        $("body").html(err.responseText);
                    }
                },
                autoWidth:false,
                columnDefs:[
                    {'width':'10%'},
                    {'width':'20%'},
                    {'width':'10%'},
                    {'width':'15%'},
                    {'width':'10%'},
                    {'width':'15%'},
                    {'width':'10%'},
                ],
                columns:[
                    {data:"id"},
                    {data:"descrip"},
                    {data:"fechac"},
                    {data:"numserie"},
                    {data:"clase"},
                    {data:"code"},
                    {data:"estatus"},

                ],
                deferRender: true
        });
        $("div.btnSearch").html('<button type="button" class="btn btn-dark" id="SearchData"><i class="fa fa-search"></i></button>');	            
    }
</script>
{% endblock %}
